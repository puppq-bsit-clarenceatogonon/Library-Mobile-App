        name: "favorites_screen"
    SearchScreen:
        name: "search_screen"
    CategoriesScreen:
        name: "categories_screen"

    MDScreen:
        name: 'main_screen'

        MDBoxLayout:
            orientation: "vertical"

            MDScreenManager:
                id: screen_manager

                HomeScreen:
                    name: "home_screen"

                FavoritesScreen:
                    name: "favorites_screen"

                SearchScreen:
                    name: "search_screen"

                CategoriesScreen:
                    name: "categories_screen"

            MDNavigationBar:
                on_switch_tabs: app.on_switch_tabs(*args)

                BaseMDNavigationItem
                    icon: "home"
                    text: "Home"
                    active: True

                BaseMDNavigationItem
                    icon: "bookmark"
                    text: "Favorites"

                BaseMDNavigationItem
                    icon: "magnify"
                    text: "Search"

                BaseMDNavigationItem
                    icon: "book-open-variant-outline"
                    text: "Categories"


# BaseMDNavigationItem Template
<BaseMDNavigationItem>:
    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

<HomeScreen>:
    on_pre_enter: app.load_recommended_books()
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color:(45/255, 58/255, 66/255, 1)



