# LoginScreen UI
<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: (237/255, 237/255, 237/255, 1)
        spacing: 45
        padding: [100,  50, 100, 100]


        MDLabel:
            text: 'WELCOME TO\nSINTANG AKLATAN'
            halign: 'center'
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .5}
            #padding: "4dp", "60dp"
            theme_text_color: "Custom"
            text_color: "red"
            theme_font_size: "Custom"
            font_size: "25sp"


        MDTextField:
            id: name
            MDTextFieldHintText:
                text: "Name"
            MDTextFieldHelperText:
                text: "(Fname M.I, Lname)"
            MDTextFieldTrailingIcon:
                icon: "account"


        MDTextField:
            id: student_number
            MDTextFieldHintText:
                text: "Student number"
            MDTextFieldHelperText:
                text: "(ex.2024-00020-PQ-0)"


        MDBoxLayout:
            orientation: 'horizontal'
            #md_bg_color: (1, 0, 0, 1)
            size_hint_y: None
            height: 35
            spacing: 20
            #padding: [10, 10, 10, 5]

            MDButton:
                style: "elevated"
                theme_shadow_color: "Custom"
                shadow_color: "red"
                pos_hint: {"center_x": .9, "center_y": .9}
                theme_width: "Custom"
                height: "45dp"
                size_hint_x: .5
                on_press: root.login_student(name.text, student_number.text)


                MDButtonText:
                    text: "LOG IN"
                    theme_text_color: "Custom"
                    text_color: "red"
                    pos_hint: {"center_x": .5, "center_y": .5}


            MDButton:
                style: "elevated"
                theme_shadow_color: "Custom"
                shadow_color: "white"
                pos_hint: {"center_x": .9, "center_y": .9}
                theme_width: "Custom"
                height: "45dp"
                size_hint_x: .5
                theme_bg_color: "Custom"
                md_bg_color: "red"
                on_press: root.manager.current = "register_screen"


                MDButtonText:
                    text: "CREATE"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Custom"
                    text_color: (237/255, 237/255, 237/255, 1)



        MDButton:
            style: "filled"
            pos_hint: {"center_x": .5, "center_y": .5}
            theme_width: "Custom"
            height: "45dp"
            size_hint_x: .5
            theme_bg_color: "Custom"
            md_bg_color: (20/255, 95/255, 245/255, 1)
            on_press: root.manager.current = "librarian_screen"


            MDButtonText:
                text: "LIBRARIAN"
                pos_hint: {"center_x": .5, "center_y": .5}

            #on_release:
                #app.root.current = 'librarian_screen'

