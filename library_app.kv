# LoginScreen UI
<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: (237/255, 237/255, 237/255, 1)
        spacing: 45
        padding: [70,  50, 70, 100]

        MDLabel:
            text: 'WELCOME TO\nPUP-PARANAQUE LIBRARY'
            halign: 'center'
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .5}
            #padding: "4dp", "60dp"
            theme_text_color: "Custom"
            text_color: "red"
            theme_font_size: "Custom"
            font_size: "25sp"


        MDTextField:
            id: name
            MDTextFieldHintText:
                text: "Name"
            MDTextFieldHelperText:
                text: "(Fname M.I, Lname)"
            MDTextFieldTrailingIcon:
                icon: "account"


        MDTextField:
            id: student_number
            MDTextFieldHintText:
                text: "Student number"
            MDTextFieldHelperText:
                text: "(ex.2024-00020-PQ-0)"


        MDBoxLayout:
            orientation: 'horizontal'
            #md_bg_color: (1, 0, 0, 1)
            size_hint_y: None
            height: 35
            spacing: 8
            #padding: [10, 10, 10, 5]

            MDButton:
                style: "elevated"
                theme_shadow_color: "Custom"
                shadow_color: "red"
                pos_hint: {"center_x": .9, "center_y": .9}
                theme_width: "Custom"
                height: "40dp"
                size_hint_x: .5
                on_press: root.login_student(name.text, student_number.text)


                MDButtonText:
                    text: "Log-in"
                    theme_text_color: "Custom"
                    text_color: "black"
                    pos_hint: {"center_x": .5, "center_y": .5}

                #on_release:
                    #root.login(email.text, password.text)
                    #app.root.current = 'home_screen'

            MDButton:
                style: "elevated"
                theme_shadow_color: "Custom"
                shadow_color: "red"
                pos_hint: {"center_x": .9, "center_y": .9}
                theme_width: "Custom"
                height: "40dp"
                size_hint_x: .5
                #theme_bg_color: "Custom"
                #md_bg_color: "brown"
                on_press: root.manager.current = "register_screen"


                MDButtonText:
                    text: "Create"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Custom"
                    text_color: "black"

                #on_release:
                    #app.root.current = 'register_screen'

        MDButton:
            style: "filled"
            pos_hint: {"center_x": .5, "center_y": .5}
            theme_width: "Custom"
            height: "40dp"
            size_hint_x: .5
            theme_bg_color: "Custom"
            md_bg_color: "brown"
            on_press: root.manager.current = "librarian_screen"


            MDButtonText:
                text: "Librarian"
                pos_hint: {"center_x": .5, "center_y": .5}

            #on_release:
                #app.root.current = 'librarian_screen'

