WindowManager:
    name: "window_manager"
    id: window_manager

    LogScreen:
    HomeScreen:
    FavoritesScreen:
    SearchScreen:
    CategoriesScreen:


<LogScreen>:
    name: "log_screen"
    id: log_screen


    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: (237/255, 237/255, 237/255, 1)


        MDTopAppBar:
            id: bottom_appbar
            type: "small"

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "account"
                    theme_bg_color: "Custom"
                    md_bg_color:  (237/255, 237/255, 237/255, 1)
                    theme_icon_color: "Custom"
                    icon_color: (158/255, 0/255, 255/255, 1)

        MDLabel:
            size_hint_y: None      # Disable auto height
            #size_hint_x: None
            #size_hint: (0.5, 0.5)
                    # Set custom height
            text: "RECOMMENDATIONS"
            halign: "left"
            spacing: 30
            padding: 15


        MDBoxLayout:
            padding: 20
            orientation: "vertical"
            md_bg_color: (237/255, 237/255, 237/255, 1)

            MDScrollView:
                MDList:
                    id: container
                    spacing: 10


        MDBoxLayout:
            size_hint_y: None      # Disable auto height
            height: "2dp"        # Set custom height
            md_bg_color: 0, 0, 0, 1  # Black background


        MDNavigationBar:

            MDNavigationItem:
                name: 'home'
                on_release: app.switch_screen('home_screen')
                MDNavigationItemIcon:
                    icon:'home'
                    id: home_icon
                MDNavigationItemLabel:
                    text: 'Home'


            MDNavigationItem:
                name: 'favorites'
                on_release: app.switch_screen('search_screen')
                MDNavigationItemIcon:
                    icon:'bookmark'
                    id: bookmark_icon
                MDNavigationItemLabel:
                    text: 'Favorites'
                #on_release: app.root.current = "favorites_screen"


            MDNavigationItem:
                name: 'search'
                on_release: app.switch_screen('search_screen')
                MDNavigationItemIcon:
                    icon:'magnify'
                    id: magnify_icon
                MDNavigationItemLabel:
                    text: 'Search'
                #on_release: app.root.current = "search_screen"


            MDNavigationItem:
                name: 'categories'
                on_release: app.switch_screen('categories_screen')
                MDNavigationItemIcon:
                    icon:'book-open-variant-outline'
                    id: book-open-variant-outline_icon
                MDNavigationItemLabel:
                    text: 'Categories'












